<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help_screen"
    android:background="@android:color/darker_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sachin.mineseeker.HelpScreen">

    <Button
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/backButton" />

    <TextView
        android:text="@string/gameObjective"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gameObj"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="@string/gameObjectiveValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameObj1"
        android:layout_below="@+id/gameObj"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="@string/gameInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameObj1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/gameInstruction"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="@string/GameInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameInstruction"
        android:layout_alignLeft="@+id/gameObj1"
        android:layout_alignStart="@+id/gameObj1"
        android:id="@+id/gameIns"
        android:textSize="14sp" />

    <TextView
        android:text="@string/GameInstruction2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameIns"
        android:layout_alignLeft="@+id/gameIns"
        android:layout_alignStart="@+id/gameIns"
        android:id="@+id/gameIns1" />

    <TextView
        android:text="@string/resourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resourse"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/gameIns1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="@string/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:layout_below="@+id/resourse"
        android:layout_alignLeft="@+id/gameIns1"
        android:layout_alignStart="@+id/gameIns1" />

    <TextView
        android:text="@string/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r2"
        android:layout_below="@+id/r1"
        android:layout_alignLeft="@+id/r1"
        android:layout_alignStart="@+id/r1" />

    <TextView
        android:text="@string/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r3"
        android:layout_below="@+id/r2"
        android:layout_alignLeft="@+id/r2"
        android:layout_alignStart="@+id/r2" />

    <TextView
        android:text="@string/r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/r4"
        android:layout_below="@+id/r3"
        android:layout_alignLeft="@+id/r3"
        android:layout_alignStart="@+id/r3" />

    <TextView
        android:text="@string/r5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r4"
        android:layout_alignLeft="@+id/r4"
        android:layout_alignStart="@+id/r4"
        android:id="@+id/r5" />

    <TextView
        android:text="@string/r6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r5"
        android:layout_alignLeft="@+id/r5"
        android:layout_alignStart="@+id/r5"
        android:id="@+id/r6" />

</RelativeLayout>
